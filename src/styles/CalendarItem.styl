@import './common.styl'

.calendar-item
  padding 0.25em 0
  border-bottom 2px solid $main-color

  .time
    background-color $back-light-color
    padding 0 .5em

  .event-content
    white-space pre
    padding 0 .5em

  &:active, &:focus, &.selected
    .time
      background-color $main-color
      color #fff

  &.today
    background-color rgba(0, 0, 0, 1)
    color yellow

  &.tomorrow
    background-color rgba(51, 122, 183, 0.4)
