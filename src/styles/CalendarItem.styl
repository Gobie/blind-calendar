@import './common.styl'

.calendar-item
  padding 0.25em 0

  .time
    background-color $back-light-color
    padding 0 .5em

  .event-content
    white-space pre
    padding 0 .5em

  &:active, &:focus, &.selected
    .time
      background-color $main-color
      color #fff

  &.today
    background-color rgba(255, 0, 0, 0.25)

  &.tomorrow
    background-color rgba(0, 255, 0, 0.25)
