@import './common.styl'

.calendar-item
  padding 0.5em 0

  .time-and-place
    background-color $back-light-color
    padding .5em

  .description
    white-space pre
    padding .5em

  .btn-danger
    opacity 0.65

  &:active, &:focus, &.selected
    .time-and-place
      background-color $main-color
      color #fff

    .btn-danger
      opacity 1
